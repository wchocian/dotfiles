{
	// Place your snippets for latex here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }
	"Codeblock": {
		"prefix": "@codeblock",
		"body": [
			"\\begin{grayblock}{${1:Title}}",
			"\\begin{lstlisting}[language=${2:java}]",
			"$0",
			"\\end{lstlisting}",
			"\\end{grayblock}",
		],
		"description": "Creates a gray codeblock"
	},
	"Alternative labels": {
		"prefix": "@altlabels",
		"body": [
			"\\titlelabel{Zadanie \\thetitle.\\quad}",
			"\\renewcommand{\\thesubsection}{\\thesection.\\alph{subsection}}",
		],
		"description": "Alternative labels for sectioning and subsectioning in LaTeX (ex. Zadanie 1.; Zadanie 1.a.)"
	},
	"Question": {
		"prefix": "\\question",
		"body": [
			"\\begin{question}{${1:Pytanie?}}",
			"\t$0",
			"\\end{question}",
		],
		"description": "Question environment"
	},
	"SI": {
		"prefix": "\\SI",
		"body": [
			"\\SI{${1:Value}}{${2:Unit}}${0}",
		],
		"description": "siunitx single value snippet"
	},
	"SIrange": {
		"prefix": "\\SIrange",
		"body": [
			"\\SIrange{${1:First value}}{${2:Second value}}{${3:Unit}}${0}",
		],
		"description": "siunitx single value snippet"
	},
	"Oneimage": {
		"prefix": "\\onebyoneimage",
		"body": [
			"\\onebyoneimage{${1:width=1.0\\textwidth}}{${2:Image}}{${3:Description}}${0}",
		],
		"description": "Onebyoneimage snippet"
	},
	"Twobyoneimage": {
		"prefix": "\\twobyoneimage",
		"body": [
			"\\twobyoneimage",
			"{${1:Image}}{${2:First description}}",
			"{${3:Image}}{${4:Second description}}",
			"{${0:Description}}",
		],
		"description": "Onebyoneimage snippet"
	},
	"Minipage": {
		"prefix": "\\minipage",
		"body": [
			"\\begin{minipage}[t]{0.49\\textwidth}",
				"\t\\vspace{0pt}",
				"$0",
			"\\end{minipage}",
			"\\hfill",
			"\\begin{minipage}[t]{0.49\\textwidth}",
				"\t\\vspace{0pt}",
				"",
			"\\end{minipage}",
		],
		"description": "Minipage 2x1"
	},
	"Doc": {
		"prefix": "@latexdoc",
		"body": [
			"\\documentclass[pl]{ssearticle}",
			"",
			"\\title{${1:Tytu≈Ç}}",
			"\\author{${2:Wiktor Chocianowicz}}",
			"\\date{${3:\\today}}",
			"",
			"\\begin{document}",
			"",
			"",
			"% ------------- Section -------------",
			"\\maketitle",
			"",
			"$0",
			"\\end{document}",
		],
		"description": "Tworzy wzor latexowego dokumentu dla jezyka polskiego"
	}
}